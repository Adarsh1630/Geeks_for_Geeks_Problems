class Solution {
    public static boolean isPerfect(int n, int[] arr) {
        // code here
        
        int i=0;
        int j=n-1;
        
        for(int k=0;k<n;k++)
        {
            if(arr[i]!=arr[j])
            {
                return false;
            }
            else{
                 i++;
                j--;
            }
        }
        
        return true;
    }
}
